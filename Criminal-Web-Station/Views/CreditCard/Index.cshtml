@model CreditCardFormModel
@{ 
    ViewBag.Title = "Add Credit Card";
}
<h2 class="heading-margin text-center text-dark">Currently you don't have credit card and cannot shop from the Criminal Station Market</h2>
<form method="post">
    <div class="padding">
        <div class="row">
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <strong>Credit Card</strong>
                        <small>enter your card details</small>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label asp-for="Number"></label>
                                    <div class="input-group">
                                        <input asp-for="Number" type="text" placeholder="0000 0000 0000 0000" autocomplete="email">
                                        <span asp-validation-for="Number" class="text-danger text-sm-left small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-4">
                                <label asp-for="Month"></label>
                                <select asp-for="Month" class="form-control" id="ccmonth">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                    <option>6</option>
                                    <option>7</option>
                                    <option>8</option>
                                    <option>9</option>
                                    <option>10</option>
                                    <option>11</option>
                                    <option>12</option>
                                </select>
                            </div>
                            <div class="form-group col-sm-4">
                                <label asp-for="Year"></label>
                                <select asp-for="Year" class="form-control" id="ccyear">
                                    <option>2014</option>
                                    <option>2015</option>
                                    <option>2016</option>
                                    <option>2017</option>
                                    <option>2018</option>
                                    <option>2019</option>
                                    <option>2020</option>
                                    <option>2021</option>
                                    <option>2022</option>
                                    <option>2023</option>
                                    <option>2024</option>
                                    <option>2025</option>
                                </select>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label asp-for="Cvv"></label>
                                    <input asp-for="Cvv" class="form-control" id="cvv" type="text" placeholder="123">
                                    <span asp-validation-for="Cvv" class="text-danger text-sm-left small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-sm btn-success float-right" type="submit">
                            <i class="mdi mdi-gamepad-circle"></i> Continue
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
